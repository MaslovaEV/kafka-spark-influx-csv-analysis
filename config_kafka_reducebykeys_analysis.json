{
  "input": {
    "input_type": "kafka",
    "options": {
      "server": "localhost",
      "port": 29092,
      "topic": "demo2",
      "batchDuration": 4,
      "sep": ","
    }
  },
  "output": {
    "method": "stdout",
    "options": {
      "csv": {
        "path": "4.csv",
        "encoding": "utf-8",
        "sep": ";"
      }
    }
  },
  "processing": {
    "transformation": "src_ip; packet_size; src_mac; traffic: mult(packet_size,sampling_rate)",
    "aggregations": {
			"operation_type": "reduceByKey",
              "rule": "Max(packet_size); key = (src_ip, src_mac); Sum(traffic)"
		}
  },
  "analysis": {
    "historical": {
      "method": "mock",
      "options":{
        "deviation": 20
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "time_delta": 20,
    "accuracy": 3,
    "rule": {
      "packet_size": 5,
      "traffic": 8
    }
  }
}