{
  "input": {
    "input_type": "kafka",
    "options": {
      "server": "176.120.25.195",
      "port": 29092,
      "topic": "testtag01",
      "batchDuration": 5,
      "sep": ","
    }
  },
  "output": {
    "method": "influx",
    "options": {
      "influx": {
        "host": "localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "dev",
        "measurement": "points"
      }
    }
  },
  "processing": {
    "transformation": "src_ip; dst_country: country(dst_ip); src_port_or_icmp_type; traffic: mult(packet_size,sampling_rate)",
    "aggregations": {
      "operation_type": "reduceByKey",
      "rule": "key = (src_ip, dst_country, src_port_or_icmp_type); Sum(traffic)"
    }
  },
  "analysis": {
    "historical": {
      "method": "influx",
      "influx_options": {
        "host":"localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "dev",
        "measurement": "points"
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "time_delta": 20,
    "accuracy": 10,
    "rule": {
      "traffic": 8
    }
 },
  "databases": {
    "country": "./GeoLite2-Country.mmdb",
    "city": "./GeoLite2-City.mmdb",
    "asn": "./GeoLite2-ASN.mmdb"
  }
}