{
  "input": {
    "input_type": "kafka",
    "options": {
      "server": "localhost",
      "port": 29092,
      "topic": "demo2",
      "batchDuration": 4,
      "sep": ","
    }
  },
  "output": {
    "method": "stdout",
    "options": {
      "influx": {
        "host":"176.120.25.195",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "test_reducebykey",
        "measurement": "points"
      }
    }
  },
  "processing": {
    "transformation": "src_ip;packet_size;traffic: mult(packet_size,sampling_rate)",
    "aggregations": {
			"operation_type": "reduceByKey",
              "rule": "key = src_ip; Max(packet_size); Sum(traffic)"
		}
  },
  "analysis": {
    "historical": {
      "method": "mock",
      "options":{
        "deviation": 20
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "time_delta": 20,
    "accuracy": 3,
    "rule": {
      "packet_size": 5,
      "traffic": 10
    }
  }
}