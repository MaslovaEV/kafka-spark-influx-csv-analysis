{
  "input": {
    "input_type": "kafka",
    "options": {
      "server": "localhost",
      "port": 29092,
      "topic": "demo1",
      "batchDuration": 4,
      "sep": ","
    }
  },
  "output": {
    "method": "influx",
    "options": {
      "influx": {
        "host":"localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "dev",
        "measurement": "points"
      }
    }
  },
  "processing": {
    "transformation": "src_ip;packet_size;traffic: mult(packet_size,sampling_rate)",
    "aggregations": {
      "operation_type": "reduceByKey",
      "rule": "key = src_ip; Max(packet_size); Sum(traffic)"
    }
  },
  "analysis": {
    "historical": {
      "method": "influx",
      "influx_options": {
        "host":"localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "dev",
        "measurement": "points"
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "time_delta": 20,
    "accuracy": 10,
    "rule": {
      "traffic": 2
    }
  },
  "databases": {
    "country": "./GeoLite2-Country.mmdb",
    "city": "./GeoLite2-City.mmdb",
    "asn": "./GeoLite2-ASN.mmdb"
  }
}