{
  "input": {
    "input_type": "kafka",
    "options": {
      "server": "localhost",
      "port": 29092,
      "topic": "demo2",
      "batchDuration": 4,
      "sep": ","
    }
  },
  "output": {
    "method": "stdout",
    "options": {
      "csv": {
        "path": "3.csv",
        "encoding": "utf-8",
        "sep": ";"
      }
    }
  },
  "processing": {
    "transformation": "packet_size;traffic: mult(packet_size,sampling_rate);ip_size;ip_size_sum:ip_size",
    "aggregations": {
      "operation_type": "reduce",
      "rule": " Max(packet_size); Sum(traffic); Min(ip_size); Sum(ip_size_sum)"
    }
  },
  "analysis": {
    "historical": {
      "method": "mock",
      "options":{
        "deviation": 20
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "time_delta": 20,
    "accuracy": 3,
    "rule": {
      "ip_size": 5,
      "ip_size_sum": 10,
      "traffic": 15
    }
  },
  "databases": {
    "country": "./GeoLite2-Country.mmdb",
    "city": "./GeoLite2-City.mmdb",
    "asn": "./GeoLite2-ASN.mmdb"
  }
}