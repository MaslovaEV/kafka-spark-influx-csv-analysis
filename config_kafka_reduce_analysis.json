{
  "input": {
    "input_type": "kafka",
    "options": {
      "server": "localhost",
      "port": 29092,
      "topic": "test",
      "batchDuration": 4,
      "sep": ","
    }
  },
  "output": {
    "method": "influx",
    "options": {
      "influx": {
        "host":"localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "dev",
        "measurement": "points"
      }
    }
  },
  "processing": {
    "transformation": "packet_size;traffic: mult(packet_size,sampling_rate);ip_size;ip_size_sum:ip_size",
    "aggregations": {
      "operation_type": "reduce",
      "rule": " Max(packet_size); Sum(traffic); Min(ip_size); Sum(ip_size_sum)"
    }
  },
  "analysis": {
    "historical": {
      "method": "influx",
      "influx_options": {
        "host": "localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "dev",
        "measurement": "points"
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "accuracy": 2,
    "rule": {
      "SimpleAnalysis": {
        "deviation":{
        "packet_size": 5,
        "traffic": 8
        },
        "batch_number": 1
      },
      "AverageAnalysis": {
        "deviation":{
        "traffic": 4
        },
        "num_average": 3
      }
    }
  },
  "databases": {
    "country": "./GeoLite2-Country.mmdb",
    "city": "./GeoLite2-City.mmdb",
    "asn": "./GeoLite2-ASN.mmdb"
  }
}